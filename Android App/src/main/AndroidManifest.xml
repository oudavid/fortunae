<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fortunae.android.app" >

    <application
        android:name="com.fortunae.android.app.FortunaeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fortunae.android.app.GoalActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fortunae.android.app.NewGoalActivity"
            android:label="@string/title_activity_new_goal"
            android:parentActivityName="com.fortunae.android.app.GoalActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="GoalActivity" />
        </activity>
    </application>

</manifest>
