<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.fortunae.android.app.NewGoalActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_new_goal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="@string/title_new_goal"/>

        <EditText
            android:id="@+id/action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/goal_list_item_height"
            android:hint="@string/hint_field_action" />

        <TextView
            android:id="@+id/description_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/description_field_action"/>

        <Spinner
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:entries="@array/default_categories"/>

        <TextView
            android:id="@+id/description_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/description_field_category"/>

        <TextView
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="@string/title_details"/>

        <SeekBar
            android:id="@+id/adventurous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/description_adventurous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/description_adventurous"/>

        <SeekBar
            android:id="@+id/time_commitment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/description_time_commitment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/description_time_commitment"/>

        <SeekBar
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/description_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/description_cost"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/goal_list_item_height"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_below="@id/category"
            android:text="@string/action_add_new_goal"/>
    </LinearLayout>
</ScrollView>
