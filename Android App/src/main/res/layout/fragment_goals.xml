<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.fortunae.android.app.MainActivity" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.fortunae.android.app.MainActivity" >

        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/title_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="72dp"
            android:text="@string/title_section_compliment"/>

        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/title_section_active"/>
        
        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/active_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/active"
            android:textStyle="bold"/>

        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/backlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/title_section_backlog"/>

        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/backlog_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/backlog"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/title_section_completed"/>

        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/completed_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/completed"
            android:layout_alignParentRight="true"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.fortunae.android.app.MainActivity" >

        <ImageView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/title_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/badge"/>

        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/title_encouragement_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_badge"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:textSize="24dp"
            android:text="@string/quote"/>

        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/title_encouragement_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/title_section_description_encouragement"/>

        <TextView
            style="@style/FortunaeTextViewStyle"
            android:id="@+id/encouragement"
            android:layout_above="@id/title_encouragement_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>